# ===========================================
# LLM Provider Configuration
# ===========================================
# Choose: "openai", "gemini", or "groq"
LLM_PROVIDER=groq

# ===========================================
# Groq API Key (FREE & FAST - Get from https://console.groq.com/keys)
# ===========================================
GROQ_API_KEY=your_groq_api_key_here

# ===========================================
# Google Gemini API Configuration (backup)
# ===========================================
# Get your free API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai
CHAT_MODEL=gemini-2.0-flash

# ===========================================
# OpenAI API Key (backup)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Hugging Face (backup)
# ===========================================
HF_API_TOKEN=

# ===========================================
# Qdrant Cloud Configuration
# ===========================================
# Get free account at: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster-url.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=physical_ai_book
COLLECTION_NAME=physical_ai_book

# ===========================================
# Neon Postgres Database Configuration
# ===========================================
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require

# ===========================================
# FastAPI Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ===========================================
# Embedding Model Configuration (FastEmbedding - FAST & FREE!)
# ===========================================
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# ===========================================
# LLM Model Configuration
# ===========================================
LLM_MODEL=llama-3.1-8b-instant

# ===========================================
# Authentication Configuration
# ===========================================
AUTH_SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-secret-key-here-min-32-chars

